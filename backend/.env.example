# API 配置
PROJECT_NAME="Sociology Master Chat API"
API_V1_PREFIX="/api/v1"

# 数据库配置
DATABASE_URL="sqlite:///./backend.db"

# AI 配置 - Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=sociology-master

# AI 配置 - Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# CORS 配置
# 支持三种格式：
# 1. 逗号分隔（推荐）：http://localhost:3000,http://localhost:5173
# 2. JSON 数组：["http://localhost:3000","http://localhost:5173"]
# 3. 单个域名：http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# 日志配置
LOG_LEVEL=INFO